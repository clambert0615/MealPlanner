@using MealPlanner.Models
@model List<FavoriteRecipes>

<h1 style="text-align:center">Favorite Recipes</h1>
<br />
<table style="width:100%">
    <thead>
        <tr>
            <th>Favorite Id</th>
            <th>Recipe Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (FavoriteRecipes fav in Model)
            {
                <tr>
                    <td>@fav.FavId</td>
                    <td>@fav.RecipeName</td>
                    <td><button onclick="document.location='/Recipe/Details?id=@fav.RecipeId'">Recipe Details</button></td>
                    <td><button onclick="document.location='/Recipe/RemoveFavorite?id=@fav.FavId'">Remove from Favorites</button></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>You have no favorites yet.</td>
            </tr>
        }
    </tbody>
</table>
